@model Application.DTOs.loginDto 
@{
    ViewData["Title"] = "Admin Login";
    Layout = "_Layout"; @* هذا يعني أن الصفحة ستستخدم ملف _Layout.cshtml للتصميم العام *@
}

<h2 style="text-align: center; color: #333; margin-top: 50px;">Admin Login</h2>

<form asp-controller="Auth" asp-action="Login" method="post" style="max-width: 400px; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
    <div asp-validation-summary="All" class="text-danger" style="color: red; margin-bottom: 15px;"></div>
    
    @* حقل مخفي لمسار العودة *@
 @*  <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" /> *@

    <div style="margin-bottom: 15px;">
        <label asp-for="Email" style="display: block; margin-bottom: 5px; font-weight: bold;">البريد الإلكتروني:</label>
        <input asp-for="Email" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" />
        <span asp-validation-for="Email" class="text-danger" style="color: red; font-size: 0.9em; margin-top: 5px; display: block;"></span>
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="Password" style="display: block; margin-bottom: 5px; font-weight: bold;">كلمة المرور:</label>
        <input asp-for="Password" type="password" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" />
        <span asp-validation-for="Password" class="text-danger" style="color: red; font-size: 0.9em; margin-top: 5px; display: block;"></span>
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="RememberMe" style="display: inline-block; margin-right: 10px;">تذكرني:</label>
        <input asp-for="RememberMe" type="checkbox" style="vertical-align: middle;" />
    </div>
    <div style="text-align: center;">
        <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">تسجيل الدخول</button>
    </div>
</form>

<div style="text-align: center; margin-top: 20px;">
    <p>ليس لديك حساب؟ <a asp-controller="Auth" asp-action="Register">سجل الآن</a></p>
</div>