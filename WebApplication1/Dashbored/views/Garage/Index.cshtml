@model IEnumerable<Application.DTOs.GarageDto>
@{
    ViewData["Title"] = "Manage Garages";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Garages Management</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Garage
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No garages found. Please add a new one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Capacity</th>
                            <th>Available Spots</th>
                            <th>Price per Hour</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var garage in Model)
                        {
                            <tr>
                                <td>@garage.Name</td>
                               
                                <td>@garage.Capacity</td>
                                <td>@garage.AvailableSpots</td>
                                <td>@garage.PricePerHour.ToString("C")</td>
                                <td>
                                    <span class="badge @(garage.IsActive ? "bg-success" : "bg-danger")">
                                        @(garage.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@garage.GarageId" class="btn btn-sm btn-info">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>

                                    <form asp-action="ToggleStatus" asp-route-id="@garage.GarageId" method="post" style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to toggle the status of this garage?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm @(garage.IsActive ? "btn-warning" : "btn-success")">
                                            <i class="fas fa-power-off"></i> @(garage.IsActive ? "Deactivate" : "Activate")
                                        </button>
                                    </form>

                                    <form asp-action="Delete" asp-route-id="@garage.GarageId" method="post" style="display:inline;"
                                          onsubmit="return confirm('WARNING: Are you sure you want to permanently delete this garage?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>