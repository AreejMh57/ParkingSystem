@model Application.DTOs.WalletDto
@{
    ViewData["Title"] = "Wallet Details";
}

<div class="container mt-5">
    <h1 class="display-5">Wallet Details</h1>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Wallet ID:</dt>
                <dd class="col-sm-9">@Model.WalletId</dd>

                <dt class="col-sm-3">User ID:</dt>
     

                <dt class="col-sm-3">Current Balance:</dt>
                <dd class="col-sm-9"><span class="badge bg-success" style="font-size: 1rem;">@Model.Balance.ToString("C")</span></dd>

                <dt class="col-sm-3">Created At:</dt>
                
                <dt class="col-sm-3">Last Updated:</dt>
              >
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>

        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#depositModal">
            <i class="fas fa-money-bill-wave"></i> Deposit
        </button>

        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deductModal">
            <i class="fas fa-minus-circle"></i> Deduct
        </button>
    </div>
</div>

<!-- Deposit Modal -->
<div class="modal fade" id="depositModal" tabindex="-1" aria-labelledby="depositModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Deposit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="walletId" value="@Model.WalletId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="depositModalLabel">Deposit Funds</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="depositAmount" class="form-label">Amount</label>
                        <input type="number" class="form-control" id="depositAmount" name="amount" min="0.01" step="0.01" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Confirm Deposit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Deduct Modal -->
<div class="modal fade" id="deductModal" tabindex="-1" aria-labelledby="deductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Deduct" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="walletId" value="@Model.WalletId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="deductModalLabel">Deduct Funds</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="deductAmount" class="form-label">Amount</label>
                        <input type="number" class="form-control" id="deductAmount" name="amount" min="0.01" step="0.01" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Confirm Deduction</button>
                </div>
            </form>
        </div>
    </div>
</div>