@model IEnumerable<Application.DTOs.WalletDto>
@{
    ViewData["Title"] = "Manage Wallets";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Wallets Management</h1>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No wallets found.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Wallet ID</th>
                            <th>User ID</th>
                            <th>Balance</th>
                            <th>Last Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var wallet in Model)
                        {
                            <tr>
                                <td>@wallet.WalletId.ToString().Substring(0, 8)...</td>
                               
                                <td>@wallet.Balance.ToString("C")</td>
                              
                                <td>
                                    <a asp-action="Details" asp-route-id="@wallet.WalletId" class="btn btn-sm btn-info">
                                        <i class="fas fa-search-plus"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>